{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "postgresdb-pod"
    },
    "spec": {
      "containers": [
        {
          "name": "postgres",
          "image": "postgres:9.6.17-alpine",
          "env": [
            {
                "name": "POSTGRES_PASSWORD",
                "value": "postgres"
            }
          ],
          "ports": [{
            "containerPort": 5432
          }]
        }
      ]
    }
  }