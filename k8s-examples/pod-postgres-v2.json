{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "postgresdb-pod",
      "labels": {
        "app": "database"
      }
    },
    "spec": {
      "containers": [
        {
          "name": "postgres",
          "image": "postgres:9.6.17-alpine",
          "env": [
            {"name": "POSTGRES_PASSWORD", "value": "postgres"},
            {"name": "PORT", "value": "5432"}
          ],
          "ports": [{
            "containerPort": 5432,
            "name": "database-port"
          }]
        }
      ]
    }
  }